# Active profile: local | staging | prod
ACTIVE_PROFILE=local

# Keys are namespaced by profile in this app to keep one .env
# local profile
LOCAL_DATABASE_URL__local=postgresql://postgres:postgres@localhost:5432/appdb
SHADOW_DATABASE_URL__local=postgresql://postgres:postgres@localhost:5432/prisma_shadow

# staging (supabase)
DATABASE_URL__staging=postgresql://postgres:XXXXXXXX@aws-0-<region>.pooler.supabase.com:6543/postgres?pgbouncer=true&sslmode=require&connection_limit=1&schema=public
DIRECT_URL__staging=postgresql://postgres:XXXXXXXX@db.<project-ref>.supabase.co:5432/postgres?sslmode=require&schema=public

# prod (supabase)
DATABASE_URL__prod=postgresql://postgres:XXXXXXXX@aws-0-<region>.pooler.supabase.com:6543/postgres?pgbouncer=true&sslmode=require&connection_limit=1&schema=public
DIRECT_URL__prod=postgresql://postgres:XXXXXXXX@db.<project-ref>.supabase.co:5432/postgres?sslmode=require&schema=public

# Optional: pg_dump path for backups
PG_DUMP_PATH=/usr/local/bin/pg_dump
PG_SSL_CA_PATH=
